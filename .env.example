# TDSQL-C PostgreSQL (Tencent HK)
DATABASE_URL=postgresql://user:password@your-tdsql-instance.tencentcloud.com/translator?sslmode=require

# JWT
JWT_SECRET=change-this-to-a-very-long-random-string-in-production

# Server
PORT=4005
NODE_ENV=production

# SMTP Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@translator.studiodtw.net

# Frontend base URL used in emails and at build time
FRONTEND_URL=https://translator.studiodtw.net
VITE_API_BASE_URL=https://translator.studiodtw.net/api

# Google Cloud Translation
GOOGLE_TRANSLATE_API_KEY=your-google-cloud-api-key
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Cloudflare R2 (optional for future file uploads)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=translator-files
R2_PUBLIC_URL=https://pub-xxxx.r2.dev